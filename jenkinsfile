pipeline {
    environment {
        GIT_URL = "https://github.com/JeongJaeHa/5-inque-be.git"
        registry = "jeongjaeha/aws-be"
        dockerImage = ""
        dockerhub = "https://hub.docker.com/repository/docker/jeongjaeha/aws-be/general"
        dockerhub_credentials = "dockerhub"
    }
    
    agent any
    tools {nodejs "node"}

    stages {
        stage('start') {
            steps {
                echo "start jenkins file test"
                // slackSend (
                //     channel: '#management-service-for-start-up', 
                //     color: '#33FF33', 
                //     message: "STARTED: 5inque was jenkins-pipeline started"
                // )
            }
        }
        stage('pull') {
            steps {
                git url : "${GIT_URL}", branch : "main", poll: true, changelog: true
            }
        }
        stage('test') {

          steps {
            sh 'npm test'
          }
        }
    }
    post {
        success {
            // slackSend (
            //     channel: '#management-service-for-start-up', 
            //     color: '#33FF33', 
            //     message: "SUCCESS: test success"
            // )
            echo 'test success'
        }
        failure {
            // slackSend (
            //     channel: '#management-service-for-start-up', 
            //     color: '#FF0000', 
            //     message: "FAIL: test fail"
            // )
            echo 'test fail'
        }
    }
}